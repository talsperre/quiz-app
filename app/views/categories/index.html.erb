<% provide(:title, 'All Categories') %>
<h1 class="text-center">All Categories</h1>

<table class="table table-striped table-hover ">
  <thead>
  <tr>
    <th>#</th>
    <th>Category Name</th>
    <th>Subcategories</th>
    <th>Leader Board</th>
    <% if current_user.admin? %>
        <th>Edit</th>
        <th>Delete</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <%= ctr = 0 %>
  <% @categories.each do |category| %>
      <tr>
        <td><%= ctr + 1 %></td>
        <td><%=	category.name %></td>
        <td><%=	link_to "Subcategories", show_all_subcategories_path(category.id) %></td>
        <td><%=	link_to "Leader Board", leaderboard_path(1, category.id) %></td>
        <% if current_user.admin? %>
            <td><%= link_to "Edit", edit_category_path(category.id) %></td>
            <td><%=	 link_to "Delete", category, method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% end %>
      </tr>
      <%=	 ctr = ctr + 1 %>
  <% end %>
  </tbody>
</table>
