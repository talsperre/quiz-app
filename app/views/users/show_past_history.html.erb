<% provide(:title, "Past Submissions") %>

<table class="table table-striped table-hover ">
  <thead>
  <tr>
    <th>#</th>
    <th>Quiz Name</th>
    <th>Subcategory Name</th>
    <th>Category Name</th>
    <th>Play Again</th>
    <th>Attempted?</th>
    <th>Max Score</th>
  </tr>
  </thead>
  <tbody>
  <%= ctr = 0 %>
  <% @quizzes.each do |quiz| %>
    <tr>
      <td><%= ctr + 1 %></td>
      <p hidden><%= score = Score.find_by(user_id: current_user.id, quiz_id: quiz.id) %></p>
      <td><%=	quiz.name %></td>
      <td><%=	quiz.subcategory.name %></td>
      <td><%=	quiz.subcategory.category.name %></td>
      <% if score %>
          <td><%=	link_to "Play Again", play_path(quiz.id) %></td>
          <td>Attempted</td>
          <td><%=	score.total %></td>
      <% else %>
          <td><%=	link_to "Play Game", play_path(quiz.id) %></td>
          <td>Not Attempted</td>
          <td>0</td>
      <% end %>
      <%=	 ctr = ctr + 1 %>
    </tr>
  <% end %>
  </tbody>
</table>