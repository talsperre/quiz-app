<% provide(:title, 'All users') %>
<h1 class="text-center">All Users</h1>

<table class="table table-striped table-hover ">
  <thead>
  <tr>
    <th>#</th>
    <th>Profile Picture</th>
    <th>Name</th>
    <th>Email</th>
    <th>Gender</th>
    <th>View</th>
    <th>Delete</th>
  </tr>
  </thead>
  <tbody>
  <%= ctr = 0 %>
  <% @users.each do |user| %>
      <tr>
        <td><%= ctr + 1 %></td>
        <td><%=	 gravatar_for user, size: 60 %></td>
        <td><%=	 user.name %></td>
        <td><%=	 user.email %></td>
        <td><%=	 user.gender %></td>
        <td><%=	 link_to "View Profile", user %></td>
        <% if !(current_user == user) %>
            <td><%= link_to "Delete", user, method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% else %>
            <td><%= link_to "Delete", "#" %></td>
        <% end %>
      </tr>
      <%=	 ctr = ctr + 1 %>
  <% end %>
  </tbody>
</table>