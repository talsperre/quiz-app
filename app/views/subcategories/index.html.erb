<% provide(:title, 'All Subcategories') %>
<h1 class="text-center">All Subcategories</h1>

<table class="table table-striped table-hover ">
  <thead>
  <tr>
    <th>#</th>
    <th>Subcategory Name</th>
    <th>Quizzes</th>
    <th>Leader Board</th>
    <% if current_user.admin? %>
        <th>Edit</th>
        <th>Delete</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <%= ctr = 0 %>
  <% @subcategories.each do |subcategory| %>
      <tr>
        <td><%= ctr + 1 %></td>
        <td><%=	 subcategory.name %></td>
        <td><%=	 link_to "Quizzes", show_all_quizzes_path(subcategory.id) %></td>
        <td><%=	link_to "Leader Board", leaderboard_path(2, subcategory.id) %></td>
        <% if current_user.admin? %>
            <td><%= link_to "Edit", edit_subcategory_path(subcategory.id) %></td>
            <td><%=	 link_to "Delete", subcategory, method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% end %>
      </tr>
      <%=	 ctr = ctr + 1 %>
  <% end %>
  </tbody>
</table>