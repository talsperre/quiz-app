<% provide(:title, 'Create Subcategory') %>
<h1 class="text-center">Create Subcategory</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%=	 form_for @subcategory, :html => {:class => 'form-horizontal'} do |f| %>
        <%=	 render 'shared/subcategory_error_messages' %>
        <%= f.label :name, class: 'control-label' %>
        <%= f.text_field :name, class: 'form-control' %>
        <br>
        <%= f.label :category_id, class: 'control-label' %>
        <select name="subcategory[category_id]" id="subcategory_category_id" class="form-control">
          <% @categories.each do |category| %>
            <option value="<%= category.id %>">
              <%= category.name %>
            </option>
          <% end %>
        </select>
        <br>
        <%= f.submit "Create subcategory", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>