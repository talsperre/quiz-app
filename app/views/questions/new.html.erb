<% provide(:title, 'Create Question') %>
<h1 class="text-center">Create Question</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%=	 form_for @question, :html => {:class => 'form-horizontal'} do |f| %>
        <%=	 render 'shared/question_error_messages' %>
        <%= f.label :name, class: 'control-label' %>
        <%= f.text_field :name, class: 'form-control' %>
        <br>

        <%= f.label :qtype, class: 'control-label' %>
        <%= f.text_field :qtype, class: 'form-control' %>
        <br>

        <%= f.label :content, class: 'control-label' %>
        <%= f.text_area :content, class: 'form-control' %>
        <br>

        <%= f.label :option_one, class: 'control-label' %>
        <%= f.text_area :option_one, class: 'form-control' %>
        <br>

        <%= f.label :option_two, class: 'control-label' %>
        <%= f.text_area :option_two, class: 'form-control' %>
        <br>

        <%= f.label :option_three, class: 'control-label' %>
        <%= f.text_area :option_three, class: 'form-control' %>
        <br>

        <%= f.label :option_four, class: 'control-label' %>
        <%= f.text_area :option_four, class: 'form-control' %>
        <br>

        <%= f.label :answer, class: 'control-label' %>
        <%= f.text_field :answer, class: 'form-control' %>
        <br>

        <%= f.label :category_id, class: 'control-label' %>
        <select name="question[quiz_id]" id="question_quiz_id" class="form-control">
          <% @quizzes.each do |quiz| %>
              <option value="<%= quiz.id %>">
                <%= quiz.name %>
              </option>
          <% end %>
        </select>
        <br>
        <%= f.submit "Create question", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>