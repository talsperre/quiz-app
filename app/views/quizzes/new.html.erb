<% provide(:title, 'Create Quiz') %>
<h1 class="text-center">Create Quiz</h1>

<div class="row">
  <div class="col-md-6 col-md-offset-3">
    <%=	 form_for @quiz, :html => {:class => 'form-horizontal'} do |f| %>
        <%=	 render 'shared/quiz_error_messages' %>
        <%= f.label :name, class: 'control-label' %>
        <%= f.text_field :name, class: 'form-control' %>
        <br>
        <select name="quiz[subcategory_id]" id="quiz_subcategory_id" class="form-control">
          <% @subcategories.each do |subcategory| %>
              <option value="<%= subcategory.id %>">
                <%= subcategory.name %>
              </option>
          <% end %>
        </select>
        <br>
        <%= f.submit "Create quiz", class: "btn btn-primary" %>
    <% end %>
  </div>
</div>