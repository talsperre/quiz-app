<% provide(:title, 'All Quizzes') %>
<h1 class="text-center">All Quizzes</h1>

<table class="table table-striped table-hover ">
  <thead>
  <tr>
    <th>#</th>
    <th>Quiz Name</th>
    <th>Play Quiz</th>
    <th>Leader Board</th>
    <% if current_user.admin? %>
        <th>Add Question</th>
        <th>Edit</th>
        <th>Delete</th>
    <% end %>
  </tr>
  </thead>
  <tbody>
  <%= ctr = 0 %>
  <% @quizzes.each do |quiz| %>
      <tr>
        <td><%= ctr + 1 %></td>
        <td><%=	 quiz.name %></td>
        <td><%=	link_to "Play Quiz", play_path(quiz.id) %></td>
        <td><%=	link_to "Leader Board", leaderboard_path(3, quiz.id) %></td>
        <% if current_user.admin? %>
            <td><%=	 link_to "Add Question", new_question_path %></td>
            <td><%= link_to "Edit", edit_quiz_path(quiz.id) %></td>
            <td><%=	 link_to "Delete", quiz, method: :delete, data: { confirm: "Are you sure?" } %></td>
        <% end %>
      </tr>
      <%=	 ctr = ctr + 1 %>
  <% end %>
  </tbody>
</table>